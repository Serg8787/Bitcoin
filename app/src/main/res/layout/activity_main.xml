<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBitcoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ivBitcoin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvBitcoin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bitcoin"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/ivBitcoin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDeclaimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="declaimer"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBitcoin" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clEUR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/back2"
        app:layout_constraintEnd_toEndOf="@+id/clBitcoin"
        app:layout_constraintStart_toStartOf="@+id/clBitcoin"
        app:layout_constraintTop_toBottomOf="@+id/clBitcoin">

        <ImageView
            android:id="@+id/ivEUR"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:src="@drawable/icons8_euro_48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEURcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="EURcode"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ivEUR"
            app:layout_constraintStart_toStartOf="@+id/ivEUR"
            app:layout_constraintTop_toBottomOf="@id/ivEUR" />

        <TextView
            android:id="@+id/tvEURdescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="EURdescription"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivEUR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivEUR"
            app:layout_constraintTop_toTopOf="@+id/ivEUR" />

        <TextView
            android:id="@+id/tvEURrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EURrate"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvEURcode"
            app:layout_constraintEnd_toEndOf="@+id/tvEURdescription"
            app:layout_constraintStart_toStartOf="@+id/tvEURdescription"
            app:layout_constraintTop_toTopOf="@+id/tvEURcode" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUSD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/back2"
        app:layout_constraintEnd_toEndOf="@+id/clEUR"
        app:layout_constraintStart_toStartOf="@+id/clEUR"
        app:layout_constraintTop_toBottomOf="@+id/clEUR">

        <ImageView
            android:id="@+id/ivUSD"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:src="@drawable/icons8_us_dollar_48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUSDcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="USDcode"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ivUSD"
            app:layout_constraintStart_toStartOf="@+id/ivUSD"
            app:layout_constraintTop_toBottomOf="@id/ivUSD" />

        <TextView
            android:id="@+id/tvUSDdescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="USDdescription"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivUSD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivUSD"
            app:layout_constraintTop_toTopOf="@+id/ivUSD" />

        <TextView
            android:id="@+id/tvUSDrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="USDrate"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvUSDcode"
            app:layout_constraintEnd_toEndOf="@+id/tvUSDdescription"
            app:layout_constraintStart_toStartOf="@+id/tvUSDdescription"
            app:layout_constraintTop_toTopOf="@+id/tvUSDcode" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGBR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/back2"
        app:layout_constraintEnd_toEndOf="@+id/clUSD"
        app:layout_constraintStart_toStartOf="@+id/clUSD"
        app:layout_constraintTop_toBottomOf="@+id/clUSD">

        <ImageView
            android:id="@+id/ivGBR"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:src="@drawable/icons8_gbr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGBRcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="GBTRcode"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ivGBR"
            app:layout_constraintStart_toStartOf="@+id/ivGBR"
            app:layout_constraintTop_toBottomOf="@id/ivGBR" />

        <TextView
            android:id="@+id/tvGBRdescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="GBrdescription"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivGBR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivGBR"
            app:layout_constraintTop_toTopOf="@+id/ivGBR" />

        <TextView
            android:id="@+id/tvGBRrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GBRrate"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvGBRcode"
            app:layout_constraintEnd_toEndOf="@+id/tvGBRdescription"
            app:layout_constraintStart_toStartOf="@+id/tvGBRdescription"
            app:layout_constraintTop_toTopOf="@+id/tvGBRcode" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/clGBR"
        app:layout_constraintStart_toStartOf="@+id/clGBR"
        app:layout_constraintTop_toBottomOf="@id/clGBR">


        <TextView
            android:id="@+id/tvTimeUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvTimeUpdated"
            android:textColor="@color/black"
            android:layout_margin="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvTimeUpdateduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvTimeUpdateduk"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tvTimeUpdated"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeUpdated" />

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8ref"
            app:layout_constraintStart_toEndOf="@+id/tvTimeUpdated"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

